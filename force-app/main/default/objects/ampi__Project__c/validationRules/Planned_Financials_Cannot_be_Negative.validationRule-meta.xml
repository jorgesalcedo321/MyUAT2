<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Planned_Financials_Cannot_be_Negative</fullName>
    <active>true</active>
    <description>Financial fields in the &quot;Financials: Planned Numbers As In Application&quot;</description>
    <errorConditionFormula>OR(
Exchange_rate_for_proposed_budget_LC__c&lt;0,
Exchange_Rate_For_Proposed_Budget__c&lt;0,
Planned_Total_Project_Budget_Donor__c&lt;0,
Grant_Amount_Requested_From_Donor__c&lt;0,
Requested_Co_Funding_Share__c&lt;0
)</errorConditionFormula>
    <errorMessage>Fields in the &quot;Financials: Planned Numbers As In Application&quot; cannot be negative.</errorMessage>
</ValidationRule>
